{% extends './shared/__template.html.twig' %}

{% block extraHead %}
  <link href="{{BASE}}public/assets/css/cadastro.css" rel="stylesheet">
{% endblock %}

{% block title %}Cadastro{% endblock %}

{% block main %}
<div class="container-fluid ps-md-0">
  <div class="row g-0">
    <div class="d-none d-md-flex col-md-4 col-lg-6 bg-image"></div>
    <div class="col-md-8 col-lg-6">
      <div class="login d-flex align-items-center py-5">
        <div class="container">
          <div class="row">
            <div class="col-md-9 col-lg-8 mx-auto">
              <h3 class="login-heading mb-4">Cadastro</h3>

              <!-- Sign In Form -->
              <form method="post" action="cadastrar/save">
                <div class="mb-3">
                  <label>Sou:&nbsp</label>         
                  <div class="form-check form-check-inline">
                    <input class="form-check-input input-pf-pj" type="radio" name="pessoa" id="pfRadio" value="pf" onchange="changePessoa()" required>
                    <label class="form-check-label" for="inlineRadio1">PF</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input input-pf-pj" type="radio" name="pessoa" id="pjRadio" value="pj" onchange="changePessoa()">
                    <label class="form-check-label" for="inlineRadio2">PJ</label>
                  </div>

                  <div id="div-pf">
                    <hr>
                    <p>Pessoa Física</p>
                    <div class="form-floating mb-3">
                      <input type="text" class="form-control pf-inputs" name="name" id="name" placeholder="Seu nome completo" disabled required>
                      <label for="name">Nome completo</label>
                    </div>
                    <div class="form-floating mb-3">
                      <input type="text" class="form-control pf-inputs" name="cpf" id="cpf" maxlength="14" placeholder="123.123.123/12" disabled required>
                      <label for="cpf">CPF</label>
                    </div>
                    <div class="form-floating mb-3">
                      <input type="text" class="form-control pf-inputs" name="rg" id="rg" placeholder="123.123.123/12" disabled required>
                      <label for="rg">RG</label>
                    </div>
                    <div class="mt-3 mb-3">
                      <label>Sexo:&nbsp</label>         
                      <div class="form-check form-check-inline">
                        <input class="form-check-input pf-inputs pf-inputs" type="radio" name="sex" id="sexRadioM" value="m" disabled required>
                        <label class="form-check-label" for="inlineRadio1">M</label>
                      </div>
                      <div class="form-check form-check-inline">
                        <input class="form-check-input pf-inputs" type="radio" name="sex" id="sexRadioF" value="f" disabled required>
                        <label class="form-check-label" for="inlineRadio2">F</label>
                      </div>
                    </div>
                    <div class="mb-3">
                      <label for="date">Data de nascimento: &nbsp</label>
                      <input class="form-control d-inline mt-1 pf-inputs" type="date" name="dateOfBirth" id="date" style="max-width:200px" disabled required>
                    </div>
                    <hr>
                  </div>

                  <div id="div-pj">
                    <hr>
                    <p>Pessoal Juridica</p>
                    <div class="form-floating mb-3">
                      <input type="text" class="form-control pj-inputs" name="NomeDaEmpresa" id="NomeDaEmpresa" placeholder="Nome Da Empresa" disabled required>
                      <label for="NomeDaEmpresa">Nome da Empresa</label>
                    </div>
                    <div class="form-floating mb-3">
                      <input type="text" class="form-control pj-inputs" name="razaoSocial" id="razaoSocial" placeholder="Razão Social" disabled required>
                      <label for="razaoSocial">Razão Social</label>
                    </div>
                    <div class="form-floating mb-3">
                      <input type="text" class="form-control pj-inputs" name="cnpj" id="cnpj" placeholder="123.123.123/12" disabled required>
                      <label for="cnpj">CNPJ</label>
                    </div>
                    <hr>
                  </div>
                </div>

                <div class="form-floating mb-3">
                  <input type="email" class="form-control" name="email" id="email" placeholder="name@example.com" required>
                  <label for="email">Email address</label>
                </div>

                <div class="form-floating mb-3">
                  <input type="text" class="form-control" name="cep" id="cep" maxlength="10" placeholder="123.123.123/12" required>
                  <label for="cep">CEP</label>
                </div>
                <div class="form-floating mb-3">
                  <input type="text" class="form-control" name="phoneNumber" id="phoneNumber" minlength="11" maxlength="14" placeholder="12 12345 1234" required>
                  <label for="phoneNumber">Telefone</label>
                </div>
                <div class="form-floating mb-3">
                  <input type="password" class="form-control" name="password" id="password" placeholder="Senha" minlength="6" required>
                  <label for="password">Senha</label>
                </div>
                <div class="form-floating mb-3">
                  <input type="password" class="form-control" name="repeatPassword" id="repeatPassword" placeholder="Repedir senha" minlength="6" required>
                  <label for="repeatPassword">Repetir senha</label>
                </div>

                <div class="d-grid">
                  <button class="btn btn-lg btn-primary btn-login text-uppercase fw-bold mb-2" type="submit">Cadastrar</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}

{% block extraJS %}
<script src="{{BASE}}public/vendor/cleaveJs/cleave.js"></script>
<script src="{{BASE}}public/vendor/cleaveJs/cleave-phone.i18n.js"></script>
<script src="{{BASE}}public/assets/js/signIn.js"></script>
{% endblock %}